<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MessagingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/splashColorAccent</item>
        <item name="colorSecondaryVariant">@color/splashColorPrimary</item>
        <item name="colorOnSecondary">#95FA7145</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/splashColorAccent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen_image</item>
        <item name="postSplashScreenTheme">@style/Theme.MessagingApp</item>

        <item name="colorPrimary">@color/splashColorPrimary</item>
        <item name="colorPrimaryDark">@color/splashColorPrimaryDark</item>
        <item name="colorAccent">@color/splashColorAccent</item>
        <item name="android:statusBarColor">@color/splashColorAccent</item>
    </style>
</resources>